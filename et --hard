[1mdiff --git a/scripts/language_changer.js b/scripts/language_changer.js[m
[1mnew file mode 100644[m
[1mindex 0000000..cb9e03b[m
[1m--- /dev/null[m
[1m+++ b/scripts/language_changer.js[m
[36m@@ -0,0 +1,86 @@[m
[32m+[m[32m// Translation cache[m
[32m+[m[32mlet translations = {};[m
[32m+[m
[32m+[m[32mdocument.addEventListener('DOMContentLoaded', function() {[m
[32m+[m[32m  // Initialize with saved language or browser preference[m
[32m+[m[32m  const defaultLang = navigator.language.split('-')[0] || 'en';[m
[32m+[m[32m  const savedLang = localStorage.getItem('siteLanguage') || defaultLang;[m
[32m+[m[41m  [m
[32m+[m[32m  // Wait a brief moment to ensure all elements are loaded[m
[32m+[m[32m  setTimeout(() => changeLanguage(savedLang), 50);[m
[32m+[m[41m  [m
[32m+[m[32m  // Dropdown event listeners[m
[32m+[m[32m  document.querySelectorAll('.language-option').forEach(option => {[m
[32m+[m[32m    option.addEventListener('click', function(e) {[m
[32m+[m[32m      e.preventDefault();[m
[32m+[m[32m      const lang = this.getAttribute('data-lang');[m
[32m+[m[32m      changeLanguage(lang);[m
[32m+[m[32m    });[m
[32m+[m[32m  });[m
[32m+[m[32m});[m
[32m+[m
[32m+[m[32masync function changeLanguage(lang) {[m
[32m+[m[32m  try {[m
[32m+[m[32m    // Only load if not cached or if we need to force reload[m
[32m+[m[32m    if (!translations[lang]) {[m
[32m+[m[32m      const response = await fetch(`translations/${lang}.json`);[m
[32m+[m[32m      if (!response.ok) throw new Error('Translation not found');[m
[32m+[m[32m      translations[lang] = await response.json();[m
[32m+[m[32m    }[m
[32m+[m[41m    [m
[32m+[m[32m    // Apply translations safely[m
[32m+[m[32m    safeApplyTranslations(translations[lang]);[m
[32m+[m[41m    [m
[32m+[m[32m    // Update UI elements if they exist[m
[32m+[m[32m    const languageDisplay = document.getElementById('currentLanguage');[m
[32m+[m[32m    if (languageDisplay) {[m
[32m+[m[32m      languageDisplay.textContent = translations[lang]['language_name'];[m
[32m+[m[32m    }[m
[32m+[m[41m    [m
[32m+[m[32m    // Save preference[m
[32m+[m[32m    localStorage.setItem('siteLanguage', lang);[m
[32m+[m[41m    [m
[32m+[m[32m    // Update HTML lang attribute[m
[32m+[m[32m    document.documentElement.lang = lang;[m
[32m+[m[41m    [m
[32m+[m[32m  } catch (error) {[m
[32m+[m[32m    console.error('Error loading translations:', error);[m
[32m+[m[32m    // Fallback to English if preferred language fails[m
[32m+[m[32m    if (lang !== 'en') changeLanguage('en');[m
[32m+[m[32m  }[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mfunction safeApplyTranslations(translation) {[m
[32m+[m[32m  // Safely update all elements with data-i18n attribute[m
[32m+[m[32m  document.querySelectorAll('[data-i18n]').forEach(element => {[m
[32m+[m[32m    const key = element.getAttribute('data-i18n');[m
[32m+[m[32m    if (translation[key]) {[m
[32m+[m[32m      try {[m
[32m+[m[32m        element.textContent = translation[key];[m
[32m+[m[41m        [m
[32m+[m[32m        if (element.placeholder) {[m
[32m+[m[32m          element.placeholder = translation[key];[m
[32m+[m[32m        }[m
[32m+[m[41m        [m
[32m+[m[32m        if (element.alt) {[m
[32m+[m[32m          element.alt = translation[key];[m
[32m+[m[32m        }[m
[32m+[m[32m      } catch (e) {[m
[32m+[m[32m        console.warn(`Failed to update element for key ${key}`, e);[m
[32m+[m[32m      }[m
[32m+[m[32m    }[m
[32m+[m[32m  });[m
[32m+[m[41m  [m
[32m+[m[32m  // Update title if needed[m
[32m+[m[32m  if (translation['page_title']) {[m
[32m+[m[32m    document.title = translation['page_title'];[m
[32m+[m[32m  }[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m// Ensure language persists across page loads[m
[32m+[m[32mwindow.addEventListener('beforeunload', function() {[m
[32m+[m[32m  if (localStorage.getItem('siteLanguage')) {[m
[32m+[m[32m    // Small delay to ensure language is saved before navigation[m
[32m+[m[32m    setTimeout(() => {}, 10);[m
[32m+[m[32m  }[m
[32m+[m[32m});[m
